<%if  !@shape.nil? %>
  <h1>Your Silhouette is <%= @shape %></h1> 
  <%= image_tag @shape_avatar.url(:thumb)%>
  <%= @shape_description%>

    <div class="products">
    <div class="row">
      
          <% @products.each do |product| %>
        <div class="col-xs-5 col-sm-3">
        <div class="item">
        <%= image_tag product.avatar.url(:thumb)%>
          <div><%=product.name%></div>
          <div><%=product.description%></div>
          <div><%=number_to_currency(product.price)%> + wishlist</div>
          <div>add to bag</div>
          </div>
        </div>
          <%end%>
<% else %>
<h1> We can not identify your body Silhouette </h1>
<div class="calc-btn">
            <%= link_to("Try it again!", :root) %>
            </div>
<%end%>